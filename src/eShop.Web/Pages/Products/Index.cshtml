            <h4 class="panel-title">Products <span class="badge bg-success ms-5px">PRO</span></h4>
        </div>
        <!-- BEGIN panel-body -->
        <div class="panel-body">
            <!-- BEGIN table-responsive -->
            <!-- BEGIN table-responsive -->
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead>
                        <tr>
                            <th style="width: 2%">#</th>
                            <th style="width: 7%">Image</th>
                            <th style="width: 25%">Title</th>
                            <th style="width: 5%">Category</th>
                            <th style="width: 5%" class="text-center">Stok State</th>
                            <th style="width: 5%" class="text-center">Price</th>
                            <th style="width: 5%" class="text-center">Create</th>
