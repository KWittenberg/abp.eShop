@page
@using Microsoft.AspNetCore.Mvc.Localization
@using eShop.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model eShop.Web.Pages.Todo.AddTodoListModalModel
@inject IHtmlLocalizer<eShopResource> L

@{
    Layout = null;
}



<abp-dynamic-form abp-model="TodoList" asp-page="/Todo/AddTodoListModal">
    <abp-modal>
        <abp-modal-header title="@L["NewTodoList"].Value"></abp-modal-header>

        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>